{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2018",
		"lib": ["esnext", "dom"],
		"outDir": "dist",
		"rootDir": "./src",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": false,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["dist", "node_modules", "**/*.spec.ts", "*.config.ts"]
}
